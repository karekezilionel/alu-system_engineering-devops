#!/usr/bin/env bash
# This script installs and configures nginx to serve a custom page with "Holberton School for the win!"

# Update package list and install nginx with -y to auto confirm
apt-get update -y
apt-get install -y nginx

# Replace default nginx homepage content
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Restart nginx using service command instead of systemctl
service nginx restart
